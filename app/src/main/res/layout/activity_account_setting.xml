<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorPrimary"    tools:context="com.example.somya.savoir.AccountSetting">    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/setting_DisplayPicture"        android:layout_width="150dp"        android:layout_height="150dp"        android:layout_marginEnd="8dp"        android:layout_marginStart="8dp"        android:layout_marginTop="32dp"        android:src="@drawable/default_profile_pic"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/setting_name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="8dp"        android:layout_marginStart="8dp"        android:layout_marginTop="32dp"        android:text="Display Name"        android:textColor="@android:color/white"        android:textSize="30sp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/setting_DisplayPicture" />    <TextView        android:id="@+id/setting_Status"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="8dp"        android:layout_marginStart="8dp"        android:text="Hi There, I'm Using Demo Chat"        android:textColor="@android:color/white"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        tools:layout_editor_absoluteY="270dp"        android:layout_marginTop="16dp"        app:layout_constraintTop_toBottomOf="@+id/setting_name" />    <Button        android:id="@+id/setting_ImageButton"        android:layout_width="150dp"        android:layout_height="wrap_content"        android:layout_marginEnd="8dp"        android:layout_marginStart="8dp"        android:layout_marginTop="32dp"        android:text="change image"        android:textColor="@color/colorPrimaryDark"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/setting_Status" />    <Button        android:id="@+id/setting_StatusButton"        android:layout_width="150dp"        android:layout_height="wrap_content"        android:layout_marginEnd="8dp"        android:layout_marginStart="8dp"        android:layout_marginTop="8dp"        android:backgroundTint="@color/colorAccent"        android:text="change status"        android:textColor="@android:color/white"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/setting_ImageButton" /></android.support.constraint.ConstraintLayout>