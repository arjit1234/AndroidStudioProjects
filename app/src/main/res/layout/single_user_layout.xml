<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <TextView        android:id="@+id/user_name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignTop="@+id/thumb_image"        android:layout_marginStart="15dp"        android:layout_toEndOf="@+id/thumb_image"        android:text="User Name"        android:textSize="20sp"        android:textStyle="bold"        app:layout_constraintStart_toEndOf="@+id/thumb_image"        app:layout_constraintTop_toTopOf="parent" />    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/thumb_image"        android:layout_width="50dp"        android:layout_height="50dp"        android:layout_alignParentStart="true"        android:layout_alignParentTop="true"        android:layout_marginStart="25dp"        android:layout_marginTop="25dp"        android:src="@drawable/default_profile_pic"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/user_status"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignStart="@+id/user_name"        android:layout_below="@+id/user_name"        android:text="User demo staus"        app:layout_constraintStart_toEndOf="@+id/thumb_image"        app:layout_constraintTop_toBottomOf="@+id/user_name" /></RelativeLayout>